generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model barang_bukti {
  id                 String   @id @default(uuid())
  kasus_id           String
  jenis_bukti        String?   @db.VarChar(100)
  lokasi_penyimpanan String?   @db.VarChar(100)
  waktu_penyimpanan  DateTime? @db.Timestamp(0)
  created_at         DateTime  @default(now()) @db.Timestamp(0)
  updated_at         DateTime  @default(now()) @db.Timestamp(0)
  kasus              kasus     @relation(fields: [kasus_id], references: [id], onDelete: Cascade)

  @@index([kasus_id])
}

model kasus {
  id                String              @id @default(uuid())
  korban_id         String?
  korban_terkait    String?             @db.VarChar(100)
  jenis_kasus       String              @db.VarChar(100)
  tanggal_kejadian  DateTime?           @db.Timestamp(0)
  ringkasan         String?             @db.Text
  status_kasus      kasus_status_kasus? @default(open)
  created_at        DateTime            @default(now()) @db.Timestamp(0)
  updated_at        DateTime            @default(now()) @db.Timestamp(0)
  barang_bukti      barang_bukti[]
  korban            korban?             @relation(fields: [korban_id], references: [id])
  tindakan_forensik tindakan_forensik[]

  @@index([korban_id])
}

model korban {
  id         String   @id @default(uuid())
  nama       String   @db.VarChar(100)
  kontak     String?  @db.VarChar(50)
  alamat     String?  @db.Text
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @default(now()) @db.Timestamp(0)
  kasus      kasus[]
}

model tindakan_forensik {
  id                String   @id @default(uuid())
  kasus_id          String
  waktu_pelaksanaan DateTime? @db.Timestamp(0)
  pec               String?   @db.Text
  created_at        DateTime  @default(now()) @db.Timestamp(0)
  updated_at        DateTime  @default(now()) @db.Timestamp(0)
  kasus             kasus     @relation(fields: [kasus_id], references: [id], onDelete: Cascade)

  @@index([kasus_id])
}

model users {
  id            String     @id @default(uuid())
  name          String?    @db.VarChar(100)
  email         String     @unique @db.VarChar(100)
  password_hash String     @db.VarChar(255)
  role          users_role @default(user)
  created_at    DateTime   @default(now()) @db.Timestamp(0)
  updated_at    DateTime   @default(now()) @db.Timestamp(0)
}

enum users_role {
  admin
  user
}

enum kasus_status_kasus {
  open
  in_progress
  closed
}
