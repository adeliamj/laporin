generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model barang_bukti {
  id                 Int       @id @default(autoincrement())
  kasus_id           Int
  jenis_bukti        String?   @db.VarChar(100)
  lokasi_penyimpanan String?   @db.VarChar(100)
  waktu_penyimpanan  DateTime? @db.DateTime(0)
  created_at         DateTime  @default(now()) @db.Timestamp(0)
  updated_at         DateTime  @default(now()) @db.Timestamp(0)
  kasus              kasus     @relation(fields: [kasus_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "barang_bukti_ibfk_1")

  @@index([kasus_id], map: "kasus_id")
}

model kasus {
  id                Int                 @id @default(autoincrement())
  korban_id         Int?
  korban_terkait    String?             @db.VarChar(100)
  jenis_kasus       String              @db.VarChar(100)
  tanggal_kejadian  DateTime?           @db.DateTime(0)
  ringkasan         String?             @db.Text
  status_kasus      kasus_status_kasus? @default(open)
  created_at        DateTime            @default(now()) @db.Timestamp(0)
  updated_at        DateTime            @default(now()) @db.Timestamp(0)
  barang_bukti      barang_bukti[]
  korban            korban?             @relation(fields: [korban_id], references: [id], onUpdate: Restrict, map: "kasus_ibfk_1")
  tindakan_forensik tindakan_forensik[]

  @@index([korban_id], map: "korban_id")
}

model korban {
  id         Int      @id @default(autoincrement())
  nama       String   @db.VarChar(100)
  kontak     String?  @db.VarChar(50)
  alamat     String?  @db.Text
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @default(now()) @db.Timestamp(0)
  kasus      kasus[]
}

model tindakan_forensik {
  id                Int       @id @default(autoincrement())
  kasus_id          Int
  waktu_pelaksanaan DateTime? @db.DateTime(0)
  pec               String?   @db.Text
  created_at        DateTime  @default(now()) @db.Timestamp(0)
  updated_at        DateTime  @default(now()) @db.Timestamp(0)
  kasus             kasus     @relation(fields: [kasus_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "tindakan_forensik_ibfk_1")

  @@index([kasus_id], map: "kasus_id")
}

model users {
  id            Int        @id @default(autoincrement())
  name          String?    @db.VarChar(100)
  email         String     @unique(map: "email") @db.VarChar(100)
  password_hash String     @db.VarChar(255)
  role          users_role @default(user)
  created_at    DateTime   @default(now()) @db.Timestamp(0)
  updated_at    DateTime   @default(now()) @db.Timestamp(0)
}

enum users_role {
  admin
  user
}

enum kasus_status_kasus {
  open
  in_progress
  closed
}
